Host aur aur.archlinux.org
    IdentityFile ~/.ssh/christian@heusel.eu
    Hostname aur.archlinux.org
    SendEnv AUR_OVERWRITE
    User aur

Host aur.local
    IdentityFile ~/.ssh/christian@heusel.eu
    Hostname localhost
    Port 2222
    SendEnv AUR_OVERWRITE
    StrictHostKeyChecking no
    User aur

Host gitlab.archlinux.org
    Hostname gitlab.archlinux.org
    IdentityFile ~/.ssh/christian@heusel.eu
    User git
    AddKeysToAgent yes

Host repos.archlinux.org
    IdentityFile ~/.ssh/christian@heusel.eu
    User gromit

Host homedir.archlinux.org
    IdentityFile ~/.ssh/christian@heusel.eu
    User gromit

Host build.archlinux.org
